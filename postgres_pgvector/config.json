{
  "name": "PostgreSQL with pgvector",
  "version": "0.1.0",
  "slug": "postgres_pgvector",
  "description": "PostgreSQL 17 with pgvector, secure user setup, and encrypted backups.",
  "arch": [
    "amd64",
    "aarch64",
    "i386"
  ],
  "startup": "services",
  "boot": "auto",
  "init": false,
  "panel_icon": "mdi:database",
  "host_network": true,
  "ports": {
    "5432/tcp": 5432
  },
  "privileged": [
    "SYS_ADMIN"
  ],
  "map": [
    "backup:rw",
    "share:rw",
    "homeassistant_config:rw",
    "ssl",
    "addons",
    "media"
  ],
  "options": {
    "ha_user_password": "ChangeThisSecurePassword",
    "auto_backup": true,
    "backup_encrypt": false,
    "gpg_recipient": ""
  },
  "schema": {
    "ha_user_password": "str",
    "auto_backup": "bool",
    "backup_encrypt": "bool",
    "gpg_recipient": "str"
  },
  "image": "ghcr.io/goruck/{arch}-postgres-pgvector"
}